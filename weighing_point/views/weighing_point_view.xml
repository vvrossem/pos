<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Top menu item -->
    <menuitem
        id="menu_point_root"
        name="weighing point"
        groups="group_wp_manager,group_wp_user"
        web_icon="weighing_point,static/description/icon.png"
        sequence="20"/>

    <!-- Orders menu -->
    <menuitem id="menu_weighing_point"
        name="Orders"
        parent="menu_point_root"
        sequence="10"/>

    <menuitem id="menu_weighing_point_customer"
        name="Customers"
        parent="menu_weighing_point"
        action="base.action_partner_customer_form"
        sequence="100"/>

    <!-- Reporting menu -->
    <menuitem id="menu_point_rep"
        name="Reporting"
        parent="menu_point_root"
        sequence="90"
        groups="group_wp_manager"/>

    <!-- Config menu and sub menus -->
    <menuitem id="menu_point_config_product"
        name="Configuration"
        parent="menu_point_root"
        sequence="100"
        groups="group_wp_manager"/>

    <menuitem id="wp_menu_products_configuration"
        name="Products"
        parent="menu_point_config_product"
        sequence="11"/>

</odoo>
