<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_wp_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="base.module_category_weighing_point"/>
    </record>
    <record id="group_wp_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_weighing_point"/>
        <field name="implied_ids" eval="[(4, ref('group_wp_user')), (4, ref('stock.group_stock_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <record id="rule_wp_bank_statement_user" model="ir.rule">
        <field name="name">weighing point Bank Statement wp User</field>
        <field name="model_id" ref="account.model_account_bank_statement" />
        <field name="groups" eval="[(4, ref('group_wp_user'))]"/>
        <field name="domain_force">[('wp_session_id', '!=', False)]</field>
    </record>
    <record id="rule_wp_bank_statement_account_user" model="ir.rule">
        <field name="name">weighing point Bank Statement Accountant</field>
        <field name="model_id" ref="account.model_account_bank_statement" />
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    <record id="rule_wp_bank_statement_line_user" model="ir.rule">
        <field name="name">weighing point Bank Statement Line wp User</field>
        <field name="model_id" ref="account.model_account_bank_statement_line" />
        <field name="groups" eval="[(4, ref('group_wp_user'))]"/>
        <field name="domain_force">[('statement_id.wp_session_id', '!=', False)]</field>
    </record>
    <record id="rule_wp_bank_statement_line_account_user" model="ir.rule">
        <field name="name">weighing point Bank Statement Line Accountant</field>
        <field name="model_id" ref="account.model_account_bank_statement_line" />
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    <record id="rule_wp_cashbox_line_accountant" model="ir.rule">
        <field name="name">weighing point Cashbox Line Accountant</field>
        <field name="model_id" ref="account.model_account_cashbox_line" />
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
    <record id="rule_wp_multi_company" model="ir.rule">
        <field name="name">weighing point Order</field>
        <field name="model_id" ref="model_wp_order" />
        <field name="global" eval="True" />
        <field name="domain_force">[('company_id', '=', user.company_id.id)]</field>
    </record>
    <record id="rule_wp_session_multi_company" model="ir.rule">
        <field name="name">weighing point Session</field>
        <field name="model_id" ref="model_wp_session" />
        <field name="global" eval="True" />
        <field name="domain_force">[('config_id.company_id', '=', user.company_id.id)]</field>
    </record>
    <record id="rule_wp_config_multi_company" model="ir.rule">
        <field name="name">weighing point Config</field>
        <field name="model_id" ref="model_wp_config" />
        <field name="global" eval="True" />
        <field name="domain_force">[('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('weighing_point.group_wp_manager'))]"/>
        </record>
    </data>
</odoo>
