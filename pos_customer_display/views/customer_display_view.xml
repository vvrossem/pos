<?xml version="1.0"?>
<odoo>
    <!--TODO(Vincent) rename file pos_config_view?-->
    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="name">pos_customer_display.pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
             <!--TODO(Vincent)
                replace iface_customer_facing_display
                OR
                distinguish them ?
            -->
            <xpath expr="//div[@id='barcode_scanner']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible' : [('is_posbox', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="iface_customer_display"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Customer Display" for="iface_customer_display"/>
                        <div class="text-muted">
                            Add a custom line length and messages to the device
                        </div>
                        <div class="content-group" attrs="{'invisible' : [('iface_customer_display', '=', False)]}">
                            <div class="row mt16">
                                <label string="Line Length" for="customer_display_line_length" class="col-lg-3 o_light_label"/>
                                <field name="customer_display_line_length"/>
                            </div>
                            <div class="row">
                                <label string="Next Customer Top Line" for="customer_display_msg_next_l1" class="col-lg-3 o_light_label"/>
                                <field name="customer_display_msg_next_l1"/>
                            </div>
                            <div class="row">
                                <label string="Next Customer Bottom Line" for="customer_display_msg_next_l2" class="col-lg-3 o_light_label"/>
                                <field name="customer_display_msg_next_l2"/>
                            </div>
                            <div class="row">
                                <label string="POS Closed Top Line" for="customer_display_msg_closed_l1" class="col-lg-3 o_light_label"/>
                                <field name="customer_display_msg_closed_l1"/>
                            </div>
                            <div class="row">
                                <label string="POS Closed Bottom Line" for="customer_display_msg_closed_l2 " class="col-lg-3 o_light_label"/>
                                <field name="customer_display_msg_closed_l2"/>
                            </div>
                        </div>
                    </div>
                </div>


            </xpath>
        </field>
    </record>

</odoo>
